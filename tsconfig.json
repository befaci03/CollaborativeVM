{
  "compilerOptions": {
    "target": "ESNext",                         
    "module": "NodeNext",                       
    "moduleResolution": "NodeNext",             
    "strict": true,                            
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                      
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "resolveJsonModule": true,                 
    "allowJs": true,                           
    "noImplicitAny": false,                    
    "sourceMap": true,                         
    "baseUrl": "./",                           
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
